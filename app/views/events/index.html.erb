<h1>Listing events</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
	<td><%= event.date %></td>
        <td><%= event.event %></td>
        <td><%= link_to 'Show', event, class: "btn btn-default", role: "button" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class: "btn btn-default", role: "button" %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", role: "button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, class: "btn btn-default", role: "button" %>
