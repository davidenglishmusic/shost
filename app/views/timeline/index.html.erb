<h1>Listing events</h1>

<br>
<input type="text" name="searchField" placeholder="Search...">
<br>

<table class="table" id="infoTable">
  <thead>
    <tr>
      <th>Date</th>
      <th>Event</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
	<td><%= event.date.to_s.gsub('-01-01', '') %></td>
        <td><%= event.event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
