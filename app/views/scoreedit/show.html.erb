</div>
</div>
<% end %>
</div>

<!-- Controller specific patch -->

<script>

(function() {

  $(window).load(function() {
    return $(".gridPoint").click(function() {
      var l;
      if (!$(this).find('.pop').length) {
        l = $(this).attr('id');
        return $(this).append('<div class="pop" id="pop' + l + '"><div class="popInfo"><form id="popform' + l + '"><input type="text" name="popInfoMeasures" placeholder="Measure(s)"><textarea rows="7" cols="30" name="popInfoNotes" placeholder="Notes..."></textarea><div class="actions">\
	    <input class="btn btn-primary" name="commit" type="submit" value="Update Note">\
	  </div></form></div></div>');
      }
    });
  });

  /*
