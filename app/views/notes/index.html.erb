<h1>Listing notes</h1>

<table>
  <thead>
    <tr>
      <th>Note</th>
      <th>Pages</th>
      <th>Source</th>
      <th>Author</th>
      <th>Url</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.note %></td>
        <td><%= note.pages %></td>
        <td><%= note.source %></td>
        <td><%= note.author %></td>
        <td><%= note.url %></td>
        <td><%= note.date %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
