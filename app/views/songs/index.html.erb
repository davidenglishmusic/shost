<h1>Listing songs</h1>

<br>
<input type="text" name="searchField" placeholder="Search...">
<br>

<table class="table" id="infoTable">
  <thead>
    <tr>
      <th>Title</th>
      <th>Composer</th>
      <th>Author</th>
      <th>Date</th>
      <th>Opus</th>
      <th>Pages</th>
      <th>Position in cycle</th>
      <th>Image URLs</th>
      <th>Original Text</th>
      <th>Transliteration Text</th>
      <th>Translation Text</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.title %></td>
        <td><%= piece.composer %></td>
        <td><%= piece.author %></td>
        <td><%= piece.date %></td>
        <td><%= piece.opus %></td>
        <td><%= piece.pages %></td>
        <td><%= piece.positionInCycle %></td>
        <td><%= piece.imageURLs %></td>
        <td><%= piece.originalText %></td>
        <td><%= piece.transliterationText %></td>
        <td><%= piece.translationText %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

